{
  "name": "academic-os",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "test": "jest",
    "test:visual": "playwright test tests/visual",
  "test:visual:prod": "npm run build && cross-env NEXT_PUBLIC_FEATURE_UI_LIBRARY=true CI=1 playwright test tests/visual",
    "prepare": "husky install",
    "verify:api": "node scripts/verify-api.mjs",
    "audit": "node scripts/full-audit.mjs",
    "audit:full": "node scripts/audit-full.mjs",
    "test:import": "node scripts/test-import.mjs",
    "test:import:my": "node scripts/test-import-my.mjs",
    "pretest:e2e": "docker compose up -d db && cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/academic_os?schema=public NEXT_PUBLIC_BASE_URL=http://localhost:3000 npx prisma migrate deploy && cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/academic_os?schema=public NEXT_PUBLIC_BASE_URL=http://localhost:3000 npx prisma db seed",
  "test:e2e": "playwright install && cross-env NEXT_PUBLIC_FEATURE_UI_LIBRARY=true playwright test",
    "test:e2e:week-first": "cross-env NEXT_PUBLIC_FEATURE_UI_LIBRARY=true playwright test tests/e2e/week-first.spec.ts",
    "generate:components": "tsx scripts/generate-component-manifest.ts",
    "generate:tailwind": "tsx scripts/generate-tailwind-from-tokens.ts",
    "codemod:imports": "node scripts/codemods/replace-imports.js --dry-run",
    "codemod:tokens": "node scripts/codemods/replace-tokens.js",
    "seed:bit": "tsx prisma/seed-bit-dsm.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "date-fns": "3.6.0",
    "next": "^14.2.31",
    "papaparse": "5.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "3.23.8",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "1.47.2",
  "@testing-library/jest-dom": "6.6.3",
  "@testing-library/react": "16.0.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@types/react": "18.2.79",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8.4.31",
    "prettier": "2.8.8",
    "prisma": "^6.13.0",
    "tailwindcss": "3.4.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.2",
    "ts-morph": "20.0.0",
    "tsx": "^4.20.3",
    "typescript": "5.4.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
